{
  "name": "node-js-getting-started",
  "version": "0.3.0",
  "description": "A sample jwt auth Node.js app using Express 4 for microservices apps",
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production nodemon server.js",
    "test": "jest --verbose --coverage --forceExit --maxWorkers=1",
    "lintfix": "eslint \"**/*.js\" --fix",
    "lint": "eslint \"**/*.js\""
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.5.4",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.7",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "hosted-git-info": ">=2.8.9",
    "jsonwebtoken": "^9.0.3",
    "lodash": ">=4.17.21",
    "mongoose": "^6.0.14"
  },
  "devDependencies": {
    "eslint": "^8.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^27.4.3",
    "supertest": "^4.0.2",
    "tape": "^4.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku/node-js-getting-started"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
